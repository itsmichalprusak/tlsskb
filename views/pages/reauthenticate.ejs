<div class="d-flex w-100 h-100 mt-5 justify-content-center align-self-center">
  <div class="card<%= warning === null ? '' : ' border-danger' %>" style="width: 28rem;">
    <div class="card-body">
      <h5 class="card-title"><i class="fas fa-lock"></i> Ponowne uwierzytelnianie</h5>
      <h6
        class="card-subtitle mb-4 <%= warning === null ? 'text-muted' : 'text-danger' %>">
        <%= warning === null ? 'Podaj hasło, by uzyskać dostęp do funkcji administratora' : warning %></h6>
      <form method="post" action="/admin/reauthenticate">
        <div class="form-group">
          <label for="password">Hasło</label>
          <input type="password" class="form-control form-control-sm" id="password" name="password"
                 placeholder="Twoje hasło..." required>
        </div>
        <a href="/" class="btn btn-secondary">Wróć</a>
        <button type="submit" class="btn btn-primary">Uwierzytelnij</button>
      </form>
    </div>
  </div>
</div>
