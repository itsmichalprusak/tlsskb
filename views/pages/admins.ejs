<div class="d-flex w-100 h-100 mt-3 justify-content-center align-self-center">
  <div class="card" style="width: 60%;">
    <div class="card-body">
      <h5 class="card-title">Katalog administratorów</h5>
      <h6 class="card-subtitle mb-4 text-muted">Lista wszystkich użytkowników z niestandardowymi uprawnieniami.</h6>
      <table class="table table-hover mb-3">
        <thead>
        <tr>
          <th>ID</th>
          <th>Nazwa</th>
          <th>Rodzaj</th>
          <th class="text-right">Operacje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < admins.length; i++) { %>
        <tr>
          <td><%= admins[i].id %></td>
          <td><%= admins[i].name %></td>
          <td>
            <span class="badge badge-pill badge-primary">
              <%= admins[i].group %>
            </span>
          </td>
          <td class="text-right">
            <% if (admins[i].group === 'admin') { %>
            <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-redo"></i> Cofnij uprawnienia</a>
            <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-arrow-up"></i> Promuj na dewelopera</a>
            <% } else if (admins[i].group === 'dev' && me.id !== admins[i].id) { %>
            <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-redo"></i> Cofnij uprawnienia</a>
            <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-arrow-down"></i> Degraduj na administratora</a>
            <% } else { %>
            Nie możesz cofnąć ani zmienić własnych uprawnień.
            <% } %>
          </td>
        </tr>
        <% } %>
        </tbody>
      </table>
      <a href="/admin" class="btn btn-secondary">Wróć</a>
      <a href="/admin/addAdmin" class="btn btn-primary">Dodaj administratora</a>
    </div>
    <div class="card-footer bg-primary text-center text-muted">
      Copyright &copy; 2018 Meehoweq
    </div>
  </div>
</div>
