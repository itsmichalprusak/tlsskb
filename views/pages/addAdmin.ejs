<div class="d-flex w-100 h-100 mt-3 justify-content-center align-self-center">
  <div class="card" style="width: 60%;">
    <div class="card-body">
      <h5 class="card-title">Dodaj administratora</h5>
      <h6 class="card-subtitle mb-4 text-muted">Przyznaj użytkownikom niestandardowe uprawnienia.</h6>
      <form method="post" action="/admin/addAdmin">
        <div class="form-group">
          <label for="username">Użytkownik</label>
          <select class="form-control" id="username" name="username" <%= users.length === 0 ? 'disabled' : ''%>>
            <% if (users.length > 0) { %>
              <% for (let i = 0; i < users.length; i++) { %>
              <option value="<%= users[i].name %>"><%= users[i].name%></option>
              <% } %>
            <% } else { %>
            <option selected>Brak użytkowników bez uprawnień administratorskich.</option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="group">Rodzaj administratora</label>
          <select class="form-control" id="group" name="group">
            <option value="admin">Normalny (brak dostępu do zakładki Administratorzy)</option>
            <option value="dev">Deweloper (wszystkie prawa)</option>
          </select>
        </div>
        <a href="/admin" class="btn btn-secondary">Wróć</a>
        <a href="/admin/browseAdmins" class="btn btn-secondary">Katalog administratorów</a>
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
      </form>
    </div>
    <div class="card-footer bg-primary text-center text-muted">
      Copyright &copy; 2018 Meehoweq
    </div>
  </div>
</div>
